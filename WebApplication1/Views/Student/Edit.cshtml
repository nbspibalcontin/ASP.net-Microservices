@model WebApplication1.DTO.StudentDto

@{

} 

<h1>Edit Student</h1>
@if (ViewBag.ErrorMessage != null)
{
    <div class="alert alert-danger">
        <p>@ViewBag.ErrorMessage</p>
    </div>
}

<form method="post" enctype="multipart/form-data">
    <!-- <div asp-validation-summary="All" class="text-danger"></div> Validation summary -->
    <div class="mt-5">
        <label asp-for="StudentId"></label>
        <input asp-for="StudentId" class="form-control" readonly/>
    </div>
    <div class="mt-5">
        <label asp-for="Firstname"></label>
        <input asp-for="Firstname" class="form-control" />
        <span asp-validation-for="Firstname" class="text-danger"></span>
    </div>
    <div class="mt-5">
        <label asp-for="Lastname"></label>
        <input asp-for="Lastname" class="form-control" />
        <span asp-validation-for="Lastname" class="text-danger"></span>
    </div>
    <div class="mt-5">
        <label asp-for="Age"></label>
        <input asp-for="Age" class="form-control" />
        <span asp-validation-for="Age" class="text-danger"></span>
    </div>
    <div class="mt-5">
        <label asp-for="Address"></label>
        <input asp-for="Address" class="form-control" />
        <span asp-validation-for="Address" class="text-danger"></span>
    </div>
    <div class="mt-5">
        <label asp-for="PhoneNumber"></label>
        <input asp-for="PhoneNumber" class="form-control" />
        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
    </div>
    <div class="mt-5">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="mt-5">
        <label asp-for="Gender"></label>
        <select asp-for="Gender" class="form-control">
            <option value="Male">Male</option>
            <option value="Female">Female</option>
        </select>
        <span asp-validation-for="Gender" class="text-danger"></span>
    </div>
    <div class="mt-5">
        <label asp-for="DateOfBirth"></label>
        <input asp-for="DateOfBirth" type="date" class="form-control" value="@Model?.DateOfBirth.ToString("yyyy-MM-dd")" />
        <span asp-validation-for="DateOfBirth" class="text-danger"></span>
    </div>
    <div class="mt-5">
        <label asp-for="Status"></label>
        <select asp-for="Status" class="form-control">
            <option value="Regular">Regular</option>
            <option value="Irregular">Irregular</option>
        </select>
        <span asp-validation-for="Status" class="text-danger"></span>
    </div>
    <div class="mt-5">
        <label asp-for="Working"></label>
        <input asp-for="Working" type="checkbox" />
        <span asp-validation-for="Working" class="text-danger"></span>
    </div>
     <div class="mt-5">
        <label asp-for="File"></label>
        <input asp-for="File" type="file" class="form-control" accept="image/*" />
        @if (!string.IsNullOrEmpty(Model?.ImageData))
        {
            <img src="data:image/png;base64,@(Model.ImageData)" alt="Student Image" width="100" height="100" />
        }
        <span asp-validation-for="File" class="text-danger"></span>        
    </div> 
    <button type="submit" class="btn btn-primary mt-5">Update</button>
</form>
